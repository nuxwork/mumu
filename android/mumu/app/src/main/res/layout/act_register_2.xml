<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_actionbar_height"
        android:background="@color/activity_actionbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="@dimen/activity_actionbar_height"
            android:layout_height="@dimen/activity_actionbar_height"
            android:src="@mipmap/ic_back_arrow_left"
            android:scaleType="center"
            android:background="@drawable/common_btn_dark_selector"
            android:onClick="doBack"/>
        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/gap4"
            android:layout_marginBottom="@dimen/gap4"
            android:background="#2D2D2D"/>
        <TextView
            android:layout_marginLeft="@dimen/gap4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/activity_actionbar_text"
            android:textSize="@dimen/activity_actionbar_text_size"
            android:text="填写基本资料"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/nearby_list_item_gap_lager">
        <LinearLayout
            android:layout_marginTop="@dimen/gap5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@mipmap/bg_register_avater_holder">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_reg_camera"
                android:drawablePadding="@dimen/gap2"
                android:text="添加头像"/>
        </LinearLayout>

        <EditText
            android:id="@+id/birthday"
            style="@style/EditTextDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1990-04-02"/>

        <EditText
            android:id="@+id/location"
            style="@style/EditTextDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="北京"/>

        <RadioGroup
            android:id="@+id/gender"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="男"/>
            <RadioButton
                android:id="@+id/female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="女"/>
        </RadioGroup>


        <TextView
            android:layout_marginTop="@dimen/gap5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册成功后，性别不可以修改"
            />
        <Button
            android:id="@+id/next"
            style="@style/ButtonDefault"
            android:layout_marginTop="@dimen/gap5"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="doNext"
            android:text="下一步"/>
    </LinearLayout>
</LinearLayout>