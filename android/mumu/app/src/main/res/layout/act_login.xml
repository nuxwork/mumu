<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_actionbar_height"
        android:background="@color/activity_actionbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="@dimen/activity_actionbar_height"
            android:layout_height="@dimen/activity_actionbar_height"
            android:src="@mipmap/ic_back_arrow_left"
            android:scaleType="center"
            android:background="@drawable/common_btn_dark_selector"
            android:onClick="doBack"/>
        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/gap4"
            android:layout_marginBottom="@dimen/gap4"
            android:background="#2D2D2D"/>
        <TextView
            android:layout_marginLeft="@dimen/gap4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/activity_actionbar_text"
            android:textSize="@dimen/activity_actionbar_text_size"
            android:text="登录"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/nearby_list_item_gap_lager">
        <EditText
            android:id="@+id/account"
            style="@style/EditTextDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:phoneNumber="true"
            android:hint="请输入手机号"/>
        <EditText
            android:id="@+id/password"
            style="@style/EditTextDefault"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:hint="请输入密码"/>
        <Button
            style="@style/ButtonDefault"
            android:layout_marginTop="@dimen/gap5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="doLogin"
            android:text="登录"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/gap3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#2CBCFF"
                android:textSize="14dp"
                android:text="选择手机区号？" />
            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#2CBCFF"
                android:textSize="14dp"
                android:text="登录遇到困难？" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
